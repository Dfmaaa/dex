ft content '\2' '^#! */.*(/env +|/)(bash|perl|php|python|sh)(\s|$)'

ft match '\1' '\.(bash|c|cpp|css|diff|go|html|perl|php|sh|sql)$'
ft match bash '/\.bash(rc|_profile|_logout)$'
ft match bash '.*/PKGBUILD'
ft match editor '/\.editor/(rc|filetype|syntax/.*)$'
ft match gitcommit '/COMMIT_EDITMSG$'
ft match gitrebase '/git-rebase-todo$'
ft match indent '/\.indent\.pro$'
ft match make '[mM]akefile(\..*)?$'

# other extensions
ft extension c h
ft extension cpp hpp cc hh C H cxx hxx c++ moc inl pro
ft extension diff patch
ft extension html htm xhtml
ft extension make mk mak
ft extension perl pl
ft extension php php3 php4
ft extension python py
ft extension smarty tpl

# should be last
ft match config '/etc/.*'
