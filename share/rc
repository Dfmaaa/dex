include $DATADIR/editor/binding/default
include $DATADIR/editor/color/light
include $DATADIR/editor/compiler/gcc
include $DATADIR/editor/filetype

alias cl close
alias o open
alias q quit
alias r replace
alias s save
alias t tag
alias man "run -p man"
alias make "run -dij -f gcc make"
alias read "pass-through cat"

option filetype gitcommit file-history false
option filetype diff ws-error 0
option filetype make indent-width 8 expand-tab false emulate-tab false

# gray background for current line
#hi currentline keep gray keep

errorfmt grep "^([^:]+):([0-9]+):.*" file line
