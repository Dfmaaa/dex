syn begin diff

syn addr command '^diff .*'
syn addr index '^index .*'
syn addr file '^(---|\+\+\+) .*'
syn addr chunk '^@@ .*'
syn addr added '^\+.*'
syn addr removed '^-.*'
syn addr changed '^!.*'
syn addr context '^ .*'

syn connect default command index file chunk added removed changed context

syn join header command index file

syn end
