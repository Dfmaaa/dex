ft extension c c h
ft extension cpp cpp hpp cc hh C H cxx hxx c++ moc inl
ft extension sh sh
ft extension bash bash
ft match bash '/\.bash(rc|_profile|_logout)$'
ft match indent '/\.indent\.pro$'
ft extension cpp pro
ft extension python py
ft extension perl pl perl
ft match editor '/\.editor/(rc|filetype|syntax/.*)$'
ft match gitcommit '/COMMIT_EDITMSG$'
ft match make '/Makefile(\..*)?$'
ft extension make mk mak
ft content sh '^#!.*/sh(\s|$)'
ft content bash '^#!.*/bash(\s|$)'
ft content perl '^#!.*/perl(\s|$)'
ft match config '^/etc/.*'

# unknown file type
ft match none '.*'
