# obvious bindings
bind left left
bind right right
bind up up
bind down down
bind home bol
bind end eol
bind pgup pgup
bind pgdown pgdown
bind ^[ cancel

# commonly used
bind ^A bol
#bind ^E eol
bind ^F right
bind ^B left
bind ^U delete-bol
bind ^K delete-eol
bind ^W erase-word

# shift-left, shift-right
bind sleft word-bwd
bind sright word-fwd

bind ^E undo
bind ^R redo
bind ^Y copy
bind ^D cut
bind ^P paste
bind ^V "select -l"
bind ^G center-view
bind ^J join
bind ^O new-line
bind ^Q format-paragraph
bind ^S clear
bind ^C command
bind ^L "command 'line '"
bind ^T pop
bind ^] tag
bind insert insert-special

bind M-/ search-fwd
bind M-? search-bwd
bind M-p search-prev
bind M-n search-next
bind M-f "search-fwd -w"
bind M-b "search-bwd -w"
bind M-s select
bind M-t bof
bind M-e eof
bind M-m "run -p man $WORD"
bind M-[ "error -p"
bind M-] "error -n"
bind M-, "shift -- -1"
bind M-. "shift 1"
bind M-< "shift -- -1"
bind M-> shift

bind M-1 "view 1"
bind M-2 "view 2"
bind M-3 "view 3"
bind M-4 "view 4"
bind M-5 "view 5"
bind M-6 "view 6"
bind M-7 "view 7"
bind M-8 "view 8"
bind M-9 "view 9"
bind M-0 "view 10"
